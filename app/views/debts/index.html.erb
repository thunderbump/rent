<h1>Debts</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Amount</th>
    <th>Owers</th>
    <th>Owed</th>
  </tr>
  <% @debts.each do |debt| %>
    <tr>
      <td><%= debt.description %></td>
      <td><%= debt.amount %></td>
      <td><% debt.users.each do |user| %><%= user.first_name %><% end %></td>
      <td><!-- owner --></td>
      <td><%= link_to :edit, edit_debt_path(debt) %></td>
      <td><%= link_to :delete, debt_path(debt), method: :delete,
                               data: { confirm: "Delete #{debt[:description]}?" } %></td>
    </tr>
  <% end %>
</table>

<br><br>

