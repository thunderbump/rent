<div class="group_area">
<h1>Debts</h1>

<table>
  <tr class="table_header">
    <th>Description</th>
    <th>Amount</th>
    <th>Owers</th>
    <th>Owed</th>
    <th colspan=2> </th>
  </tr>
  <% @debts.each do |debt| %>
    <tr class="<%= cycle("odd_row", "even_row")%>">
      <td><%= debt.description %></td>
      <td><%= debt.amount %></td>
      <td><% debt.users.each do |user| %><%= user.first_name + " " %><% end %></td>
      <td><%= debt.owner.first_name %></td>
      <td><%= link_to :edit, edit_debt_path(debt) %></td>
      <td><%= link_to :delete, debt_path(debt), method: :delete,
                               data: { confirm: "Delete #{debt[:description]}?" } %></td>
    </tr>
  <% end %>
</table>

<br><br>

<%= link_to :New, new_debt_path %>
</div>
