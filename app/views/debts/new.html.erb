<h1>New debt</h1>

<%= form_for(@debt) do |f| %>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :amount %>
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :user_id %>
    <%= f.collection_check_boxes(:user_ids, User.all, :id, :first_name) %>
  </div>
  <div class="submit">
    <%= f.submit %>
  </div>
<% end %>
