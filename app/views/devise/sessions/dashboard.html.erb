<h1>Owned Debts</h1>
<table>
  <tr>
    <th>Description</th>
    <th>Amount</th>
  </tr>
  <% @owned_debts.each do |debt| %>
    <tr>
      <td><%= debt.description%></td>
      <td><%= debt.amount%></td>
    </tr>
  <% end %>
</table>
<h1>Owed Debts</h1>
<table>
  <tr>
    <th>Description</th>
    <th>Amount</th>
    <th>Owner</th>
  </tr>
  <% @debts.each do |debt| %>
    <tr>
      <td><%= debt.description %></td>
      <td><%= debt.amount %></td>
      <td><%= debt.owner.first_name %></td>
    </tr>
  <% end %>
</table>
